
<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="1"></th>
      <th> rated beers </th>
      <th> total ratings </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><% if user.admin %>
              <span class="label label-success">server admin</span>
            <% end %>
            <% if user.banned %>
              <span class="label label-danger">account frozen</span>
            <% end %></td>
        <td> <%= user.rated('beers').count %> </td>
        <td> <%= user.ratings.count %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class:'btn btn-primary' %>

