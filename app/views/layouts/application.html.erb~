  <div class="navibar">
    <%= link_to 'breweries', breweries_path %>
    <%= link_to 'beers', beers_path %>
    <%= link_to 'ratings', ratings_path %>
    <%= link_to 'users', users_path %>
    <%= link_to 'clubs', beer_clubs_path %>
    | 
    <% if current_user %>
      <%= link_to User.find(session[:user_id]).username, User.find(session[:user_id]) %>

      <% if current_user.beer_club %>
        <%= link_to current_user.beer_club.name, current_user.beer_club %>
      <% else %>
        <%= link_to 'join a club', new_membership_path %>
      <% end %>

      <%= link_to 'new rating', new_rating_path %>
      <%= link_to 'sign out', session_path, method: :delete, data: { confirm: 'Are you sure you want to sign out?' } %>
    <% else %>
      <%= link_to 'sign in', new_session_path %>
      <%= link_to 'sign up', new_user_path %>
    <% end %>
  </div>

